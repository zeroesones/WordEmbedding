import docx
import json

def extract_text_from_word_doc(docx_file_path):
    # Open the Word document
    doc = docx.Document(docx_file_path)

    text_pages = {}

    # Iterate through the paragraphs and group them by page
    current_page = None
    for paragraph in doc.paragraphs:
        if paragraph.page_number != current_page:
            current_page = paragraph.page_number
            text_pages[f"Page{current_page}"] = ""

        text_pages[f"Page{current_page}"] += paragraph.text + "\n"

    return text_pages

def main():
    docx_file_path = "your_word_document.docx"  # Replace with the path to your Word document
    extracted_text = extract_text_from_word_doc(docx_file_path)
    
    # Convert the extracted text into JSON format
    json_output = json.dumps(extracted_text, indent=4)
    
    # Print or save the JSON data
    print(json_output)

if __name__ == "__main__":
    main()
