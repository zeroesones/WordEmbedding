import docx2txt
import json

def extract_text_from_word_doc(docx_file_path):
    text = docx2txt.process(docx_file_path)
    text_pages = {}

    # Split the text by page breaks (assuming each page is separated by a page break)
    pages = text.split('\f')

    for page_number, page_text in enumerate(pages, start=1):
        text_pages[f"Page{page_number}"] = page_text

    return text_pages

def main():
    docx_file_path = "your_word_document.docx"  # Replace with the path to your Word document
    extracted_text = extract_text_from_word_doc(docx_file_path)
    
    # Convert the extracted text into JSON format
    json_output = json.dumps(extracted_text, indent=4)
    
    # Print or save the JSON data
    print(json_output)

if __name__ == "__main__":
    main()
